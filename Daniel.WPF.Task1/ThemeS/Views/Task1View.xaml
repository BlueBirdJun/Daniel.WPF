<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:james="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf"
                    xmlns:views="clr-namespace:Daniel.WPF.Task1.UI.Views"
                    xmlns:units="clr-namespace:Daniel.WPF.Task1.UI.Units"
                    >

    <Style TargetType="{x:Type views:Task1View}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:Task1View}" >
                    <StackPanel >
                        <TextBlock Text="TASK1" Foreground="Red"/>                        
                        <TextBlock Text="{Binding TestString}"/>
                        <TextBox Width="100" />

                        <units:NightDayButton />
                        
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>