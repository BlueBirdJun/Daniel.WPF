<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Daniel.WPF.Main.UI.Views"    >
    <Style TargetType="{x:Type views:MainContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainContent}">
                    <StackPanel>
                        <TextBlock Text="MainContent 111" />
                        
                        <TextBlock Text="{Binding Title}"/>

                        <Rectangle Fill="{DynamicResource TestColor}"  Width="100" Height="100"  />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>